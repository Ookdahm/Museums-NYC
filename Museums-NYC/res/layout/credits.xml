<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:padding="20dp">
<TextView 
	android:text="@string/pic_credit" 
	android:textStyle="bold"
	android:textSize="20sp"
	android:id="@+id/Pic_Credit_Txt" 
	android:layout_width="wrap_content" 
	android:layout_height="wrap_content"
	android:paddingBottom="20dp"></TextView>
<TableLayout 
	android:id="@+id/TableLayout01" 
	android:layout_below="@id/Pic_Credit_Txt" 
	android:layout_width="wrap_content" 
	android:layout_height="wrap_content"
	android:stretchColumns="1" >
		<TableRow 
			android:id="@+id/TableRow01" 
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content">
				<ImageButton 
					android:id="@+id/ImageButton01" 
					android:layout_width="190dp" 
					android:layout_height="120dp"
					android:background="@drawable/manhattan_bridge"
					android:cropToPadding="true"></ImageButton>
		</TableRow>

		<TableRow 
			android:id="@+id/TableRow02" 
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content">
				

		</TableRow>
</TableLayout>
<ScrollView 
	android:id="@+id/ScrollView01" 
	android:layout_below="@id/TableLayout01" 
	android:layout_width="fill_parent" 
	android:layout_height="wrap_content">
		<RelativeLayout 
			android:id="@+id/RelativeLayout01" 
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content">
				<TextView 
					android:text="@string/pic_credit_text01" 
					android:paddingTop="20dp" 
					android:id="@+id/TextView01" 
					android:layout_width="wrap_content" 
					android:layout_height="wrap_content"></TextView>

		</RelativeLayout>
</ScrollView>
</RelativeLayout>
